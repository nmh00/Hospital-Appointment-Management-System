@model AppointmentBookingWeb.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 75vh;">
        <div class="col-md-6 d-flex justify-content-center mb-3 mb-md-0">
            <img src="~/images/logo.png" class="img-fluid" alt="Login Image">
        </div>
        <div class="col-md-6 mb-3 mb-md-0">
            <div class="card transparent-card">
                <div class="card-body">
                    <h2 class="card-title text-center">Login</h2>
                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control transparent-input" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" type="password" class="form-control transparent-input" />
                        </div>
                        <button type="submit" class="btn cstm-btn mt-3">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
